                                                                        ₱@(evt.Total_Donation.Equals(null) ? "0.00 " : evt.Total_Donation.ToString()) @*/ ₱@evt.Target_Amount*@
                                                                    </p>
                                                                </div>
                                                            }
                                                        </div>
                                                        <span class="custom-btn btn" onclick="redirectToDetails(@evt.Event_Id)">View Details</span>
                                                        @*<span class="custom-btn btn" onclick="openConflictModal(@evt.Event_Id)">View Details</span>*@
                                                    </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <nav aria-label="Page navigation" class="mt-4" id="recommended-pagination">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item">
                                            <button class="page-link" onclick="prevPage('recommendedContainer', 'recommended-pagination')" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </button>
                                        </li>
                                        <li class="page-item">
                                            <button class="page-link" onclick="nextPage('recommendedContainer', 'recommended-pagination')" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </button>
                                        </li>
                                    </ul>
                                </nav>

                            </div>

                            <!-- List of Events Tab -->
                            <div class="tab-pane fade" id="listSection" role="tabpanel" aria-labelledby="list-tab">
                                <div class="row" id="listContainer">
                                    @foreach (var l_event in Model.listOfEventsSection)
                                    {
                                        <div class="col-lg-4 col-md-6 mt-2 col-12 mb-4 mb-lg-0 event-card">
                                            <div class="custom-block-wrap">
