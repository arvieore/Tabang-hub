        <script>

            const pageSize = 9; // Number of items per page
            const currentPageMap = {}; // Store the current page for each section

            function showPage(containerId, paginationId) {
                const cards = document.querySelectorAll(`#${containerId} .event-card`);
                const totalPages = Math.ceil(cards.length / pageSize);
                const currentPage = currentPageMap[containerId] || 1;

                // Display only the events for the current page
                cards.forEach((card, index) => {
                    card.style.display = (index >= (currentPage - 1) * pageSize && index < currentPage * pageSize) ? 'block' : 'none';
                });

                // Toggle the disabled state of pagination buttons
                const prevButton = document.querySelector(`#${paginationId} .page-link[aria-label="Previous"]`).parentElement;
                const nextButton = document.querySelector(`#${paginationId} .page-link[aria-label="Next"]`).parentElement;

                prevButton.classList.toggle('disabled', currentPage === 1);
                nextButton.classList.toggle('disabled', currentPage === totalPages);
            }

            function nextPage(containerId, paginationId) {
                const cards = document.querySelectorAll(`#${containerId} .event-card`);
                const totalPages = Math.ceil(cards.length / pageSize);
                const currentPage = currentPageMap[containerId] || 1;

                if (currentPage < totalPages) {
                    currentPageMap[containerId] = currentPage + 1;
                    showPage(containerId, paginationId);
                    document.getElementById(containerId).scrollIntoView({ behavior: 'smooth' });
                }
            }

            function prevPage(containerId, paginationId) {
                const currentPage = currentPageMap[containerId] || 1;

                if (currentPage > 1) {
                    currentPageMap[containerId] = currentPage - 1;
                    showPage(containerId, paginationId);
                    document.getElementById(containerId).scrollIntoView({ behavior: 'smooth' });
                }
            }

            document.addEventListener('DOMContentLoaded', () => {
                // Initialize pagination for each container
                showPage('recommendedContainer', 'recommended-pagination');
                showPage('listContainer', 'list-pagination');
                showPage('donationContainer', 'donation-pagination');
            });



