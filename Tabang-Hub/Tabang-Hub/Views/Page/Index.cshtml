                                <button class="nav-link" id="donation-tab" data-bs-toggle="tab" data-bs-target="#donationSection" type="button" role="tab" aria-controls="donationSection" aria-selected="false">Donation Event</button>
                            </li>
                        </ul>

                        <div class="tab-content" id="eventTabsContent">
                            <!-- Recommended Event Tab -->
                            <div class="tab-pane fade show active" id="recommendedSection" role="tabpanel" aria-labelledby="recommended-tab">
                                <div class="row" id="recommendedContainer">
                                    @foreach (var evt in Model.listOfEvents.Where(m => m.End_Date >= DateTime.Now))
                                    {
                                        <div class="col-lg-4 col-md-6 mt-2 col-12 mb-4 mb-lg-0 event-card">
                                            <div class="custom-block-wrap">
                                                @*<img src="~/Content/images2/causes/Basak.jpg" class="custom-block-image img-fluid" alt="">*@
                                                @{
                                                    var imgs = Model.detailsEventImage.Where(m => m.eventId == evt.Event_Id).Select(m => m.eventImage).FirstOrDefault();
                                                }
                                                <img src="@Url.Content("~/Content/Events/" + imgs)" class="custom-block-image img-fluid" alt="">
                                                <div class="custom-block">
                                                    <div class="custom-block-body">
                                                        <h5 class="mb-3">@evt.Event_Name</h5>

                                                        <p>@evt.Description</p>
                                                        @{
                                                            int currentVolunteers = Model.volunteers.Where(m => m.Status == 1 && m.eventId == evt.Event_Id).Count();
                                                            int? maxVolunteers = evt.Maximum_Volunteer;
                                                            double? progressPercentage = (double)currentVolunteers / maxVolunteers * 100;
                                                            Console.WriteLine(progressPercentage);


                                                        }
                                                        @if (evt.Target_Amount == null)
                                                        {
                                                            <br />
                                                        }
                                                        <div class="progress mt-4">
                                                            <div class="progress-bar" role="progressbar"
                                                                 style="width: @progressPercentage%; background-color: mediumseagreen;"
                                                                 aria-valuenow="@currentVolunteers"
                                                                 aria-valuemin="0"
                                                                 aria-valuemax="@maxVolunteers">
                                                            </div>
                                                        </div>
                                                            <div class="d-flex align-items-center my-2">
                                                                <p class="mb-0">
                                                                    <strong>Number of volunteers joined:</strong>
                                                                </p>

                                                                <p class="ms-auto mb-0">
                                                                    @Model.volunteers.Where(m => m.Status == 1 && m.eventId == evt.Event_Id).Count()/@evt.Maximum_Volunteer
                                                                </p>
                                                            </div>
                                                            @if (evt.Target_Amount != null)
                                                            {
                                                                <div class="progress mt-4">
                                                                    @{
                                                                        decimal? raisedAmount = evt.Total_Donation;
                                                                        var percentage = (raisedAmount / evt.Target_Amount) * 100;
                                                                    }

                                                                    <div class="progress-bar" style="width: @percentage%" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                                                </div>
                                                                <div class="d-flex align-items-center my-2">
                                                                    <p class="mb-0">
                                                                        <strong>Fund Donated: </strong>
                                                                    </p>
                                                                    <p class="ms-auto mb-0">
