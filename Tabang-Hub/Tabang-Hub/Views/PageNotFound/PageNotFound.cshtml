
@{
    ViewBag.Title = "404 - Page Not Found";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #333;
            overflow: hidden;
        }

        .error-content {
            text-align: center;
            padding: 20px;
            position: relative;
            z-index: 1;
        }

        .error-code {
            font-size: 180px;
            font-weight: 700;
            line-height: 1;
            margin: 0;
            background: linear-gradient(45deg, #3498db, #2ecc71);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
        }

            .error-code::after {
                content: '404';
                position: absolute;
                left: 5px;
                top: 5px;
                z-index: -1;
                background: linear-gradient(45deg, rgba(52, 152, 219, 0.2), rgba(46, 204, 113, 0.2));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

        .error-message {
            font-size: 24px;
            font-weight: 600;
            margin: 20px 0;
        }

        .home-button {
            display: inline-block;
            padding: 12px 24px;
            background-color: #2ecc71;
            color: white;
            text-decoration: none;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .home-button::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: rgba(255,255,255,0.1);
                transform: rotate(45deg);
                z-index: 1;
                transition: all 0.3s ease;
            }

            .home-button:hover::before {
                left: 100%;
            }

            .home-button:hover {
                background-color: #27ae60;
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(46, 204, 113, 0.3);
            }

        .background-elements {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            overflow: hidden;
        }

        .volunteer-icon {
            position: absolute;
            opacity: 0.6;
            transition: all 0.3s ease;
        }

            .volunteer-icon svg {
                width: 100%;
                height: 100%;
            }
    </style>
</head>
<body>
    <div class="background-elements">
        <div class="volunteer-icon" style="top: 10%; left: 10%; width: 80px; height: 80px;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#3498db"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm4-8c0 2.21-1.79 4-4 4s-4-1.79-4-4 1.79-4 4-4 4 1.79 4 4z" /></svg>
        </div>
        <div class="volunteer-icon" style="top: 60%; left: 15%; width: 60px; height: 60px;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#2ecc71"><path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" /></svg>
        </div>
        <div class="volunteer-icon" style="top: 20%; right: 15%; width: 70px; height: 70px;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#e74c3c"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" /></svg>
        </div>
        <div class="volunteer-icon" style="bottom: 10%; right: 20%; width: 90px; height: 90px;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#f39c12"><path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z" /></svg>
        </div>
    </div>
    <div class="error-content">
        <h1 class="error-code">404</h1>
        <p class="error-message">Oops! Page not found.</p>
        <button onclick="backToHome()" type="button" class="home-button">Back to home</button>
    </div>
    <script>
        function backToHome() {
            var role = '@(User.IsInRole("Admin") ? "Admin" : User.IsInRole("Organization") ? "Organization" : "Volunteer")';
            
            if (role === "Admin") {
                window.location.href = '@Url.Action("Index", "Admin")';
            } else if (role === "Organization") {
                window.location.href = '@Url.Action("Index", "Organization")';
            } else {
                window.location.href = '@Url.Action("Index", "Page")';
            }
        }


        function randomFloat(min, max) {
            return Math.random() * (max - min) + min;
        }

        function animateIcon(icon) {
            const startX = parseFloat(icon.style.left) || randomFloat(0, 80);
            const startY = parseFloat(icon.style.top) || randomFloat(0, 80);
            const duration = randomFloat(5000, 10000);
            const xAmplitude = randomFloat(5, 15);
            const yAmplitude = randomFloat(5, 15);

            let startTime;

            function animate(currentTime) {
                if (!startTime) startTime = currentTime;
                const elapsed = currentTime - startTime;
                const progress = elapsed / duration;

                const x = startX + Math.sin(progress * 2 * Math.PI) * xAmplitude;
                const y = startY + Math.cos(progress * 2 * Math.PI) * yAmplitude;

                icon.style.transform = `translate(${x}%, ${y}%)`;

                if (progress < 1) {
                    requestAnimationFrame(animate);
                } else {
                    animateIcon(icon);
                }
            }

            requestAnimationFrame(animate);
        }

        document.addEventListener('DOMContentLoaded', () => {
            const icons = document.querySelectorAll('.volunteer-icon');
            icons.forEach(animateIcon);
        });
    </script>
</body>
</html>